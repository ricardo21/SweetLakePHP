{% extends 'SWPFrontendBundle::login.html.twig' %}

{% block title %}
    {% trans %}login.singular{% endtrans %}
{% endblock %}

{% block content %}
    <form class="form-signin">
        <h2 class="form-signin-heading">{% trans %}login.title{% endtrans %}</h2>

        <input type="text" class="input-block-level" placeholder="{% trans %}login.email{% endtrans %}">
        <input type="password" class="input-block-level" placeholder="{% trans %}login.password{% endtrans %}">

        <label class="checkbox">
            <input type="checkbox" value="remember-me"> {% trans %}login.remember{% endtrans %}
        </label>

        <button class="btn btn-large btn-primary" type="submit">{% trans %}login.signin{% endtrans %}</button>
    </form>
{% endblock %}
